<div class="container">
	<h3>Usuarios</h3>

	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th>ID</th>
					<th>Nombres</th>
					<th>Apellidos</th>
					<th>Usuario</th>
					<th>E-mail</th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% _.each(users, function(user) { %>
				<tr data-id="<%= user.id %>" data-model="user">
				<% if (user.online) { %>
					<td>
						<span class="glyphicon glyphicon-ok-sign text-success" aria-hidden="true"></span>
					</td>
				<% } else { %>
					<td>
						<span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span>
					</td>
				<% } %>
					<td><%= user.id  %></td>
					<td><%= user.name  %></td>
					<td><%= user.last_name  %></td>
					<td><%= user.username  %></td>
					<td><%= user.email  %></td>
				<% if(user.role) { %>
					<td><span class="glyphicon glyphicon-king" aria-hidden="true"></span></td>
				<% } else { %>
					<td><span class="glyphicon glyphicon-pawn" aria-hidden="true"></span></td>
				<% } %>
					<td><a href="/user/show/<%= user.id  %>" class="btn btn-xs btn-primary" >Ver</a></td>
					<td><a href="/user/edit/<%= user.id  %>" class="btn btn-xs btn-warning" >Editar</a></td>	
					<td>
						<form action="/user/destroy" method="POST">
							<input type="hidden" name="id" value="<%= user.id %>">
							<input type="hidden" name="_csrf" value="<%= _csrf %>">
							<button type="submit" class="btn btn-xs btn-danger" >Eliminar</button>
						</form>
					</td>
				</tr>
			<% }); %>
			</tbody>
		</table>
	</div>
</div>